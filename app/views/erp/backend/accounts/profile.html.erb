<% content_for :title do %>Cập Nhật Tài Khoản: <%= @user.get_name %><% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: 'Tạo tài khoản mới', href: erp.new_backend_user_path, class: 'btn-sm'}) %><% end %>
<% content_for :page_title do %><%= link_to '<i class="fa fa-users"></i> Danh Sách Tài Khoản'.html_safe, erp.backend_users_path %> / Cập Nhật Tài Khoản: <%= @user.get_name %><% end %>
<div class="row"><div class="col-md-12"><% if @user.errors.any? %><%= erp_form_control('form_error_message') %><% end %><%= render 'form', user: @user %></div></div>