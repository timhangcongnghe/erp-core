<% content_for :title do %>Danh Sách Nhóm Tài Khoản<% end %>
<% content_for :page_title do %><i class="fa fa-users"></i> Danh Sách Nhóm Tài Khoản<% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: 'Tạo nhóm tài khoản mới', href: erp.new_backend_user_group_path, class: 'btn-noborder'}) %><% end %>
<%= erp_datalist(
    url: erp.list_backend_user_groups_path,
    keywords: [{text: 'Tên nhóm', name: 'erp_user_groups.name'}],
    filters: [
        {text: 'Đang sử dụng', name: 'erp_user_groups.active', value: 'true', checked: true},
        {text: 'Đã bị khóa', name: 'erp_user_groups.active', value: 'false', checked: false}
    ],
    columns: [
        {text: 'Tên nhóm', name: 'name', value: true, checked: true},
        {text: 'Mô tả', name: 'description', value: true, checked: true},
        {text: 'Trạng thái', name: 'status', value: true, checked: true},
        {text: 'Người tạo', name: 'creator', value: true, checked: false},
        {text: 'Ngày tạo', name: 'created_at', value: true, checked: false}
    ],
    sort: {sort_by: 'erp_user_groups.created_at', sort_direction: 'desc'}
) %>